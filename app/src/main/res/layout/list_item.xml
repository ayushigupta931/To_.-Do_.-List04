<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="8dp"
    android:background="@color/listItem"
    app:cardCornerRadius="14dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="2dp"
        android:background="@drawable/list_item_shape">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:buttonTint="#B2EBF2"
            android:paddingLeft="6dp"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            tools:ignore="RtlHardcoded,RtlSymmetry,UnusedAttribute" />
        <TextView
            android:id="@+id/task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/checkbox"
            android:layout_toLeftOf="@id/selected"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:text="@string/sampleTask"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task"
            android:layout_marginLeft="58dp"
            android:layout_marginBottom="2dp"
            android:textColor="#B2EBF2"
            android:text="fvbjdkv"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/img"
            android:src="@drawable/ic_baseline_check_circle"
            android:visibility="gone"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>